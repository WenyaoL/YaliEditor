{
  "compilerOptions": {
    "baseUrl": ".",
    //"outDir": "./build/",
    "declaration": true,
    "declarationDir": "./type",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "strictNullChecks": false,
    "allowJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/electron-renderer/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/electron-main/**/*",
    "src/electron-renderer/YaliEditor/src/plugin/markdown-it-plugin/markdown-it-list-beautiful/**/*",
    "src/electron-renderer/YaliEditor/src/plugin/markdown-it-plugin/markdown-it-table-beautiful/**/*",
    "src/electron-renderer/YaliEditor/src/plugin/markdown-it-plugin/markdown-it-emoji/**/*",
    "src/electron-renderer/YaliEditor/src/plugin/turndown-plugin/lib/*",
    "src/electron-renderer/YaliEditor/src/plugin/turndown-plugin/table.js",
    "src/electron-renderer/ipc/*",
    "src/electron-renderer/components/preference-setting/keybinding/atom-keymap/**/*",
  ],
  "files": [
    "src/electron-renderer/shims-vue.d.ts"
  ]
}